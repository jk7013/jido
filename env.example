# Jido 환경 설정 예시 파일
# 실제 사용 시 .env 파일로 복사하여 사용하세요

# 데이터베이스
DATABASE_URL=sqlite:///./data/jido.db
# DATABASE_URL=postgresql://user:password@localhost:5432/jido  # 향후 PostgreSQL 전환 시

# FastAPI 설정
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# LLM API 키
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitLab 연동
GITLAB_URL=https://gitlab.company.local
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_PROJECT_ID=your_project_id_here

# MLflow 설정
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=jido_prompts

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json

# 평가 설정
RAGAS_API_KEY=your_ragas_api_key_here
EVALUATION_BATCH_SIZE=10

# 스케줄러 설정 (향후)
SCHEDULER_TIMEZONE=Asia/Seoul
BATCH_RUN_INTERVAL=3600  # 1시간

# 보안
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30



